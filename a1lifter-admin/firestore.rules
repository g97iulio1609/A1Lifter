rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for role-based access control
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             request.auth.token.get('role', '') == role;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isJudge() {
      return hasRole('judge') || isAdmin();
    }
    
    function isOrganizer() {
      return hasRole('organizer') || isAdmin();
    }
    
    // Events collection - aligned with Clean Architecture
    match /events/{eventId} {
      allow read: if true; // Public read for live viewing
      allow create: if isOrganizer();
      allow update: if isOrganizer() && 
                       resource.data.organizer == request.auth.uid;
      allow delete: if isAdmin();
    }
    
    // Athletes collection
    match /athletes/{athleteId} {
      allow read: if true; // Public read for competitions
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isOrganizer();
      allow delete: if isAdmin();
    }
    
    // Attempts collection - core competition data
    match /attempts/{attemptId} {
      allow read: if true; // Public read for live viewing
      allow create: if isJudge();
      allow update: if isJudge() && 
                       resource.data.status in ['pending', 'in_progress'];
      allow delete: if isAdmin();
    }
    
    // User profiles
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }
    
    // Live sessions for real-time updates
    match /liveSessions/{sessionId} {
      allow read: if true; // Public read for live viewing
      allow write: if isJudge();
    }
    
    // Judge decisions - sensitive data
    match /judgeDecisions/{decisionId} {
      allow read: if isJudge();
      allow write: if isJudge() && 
                      request.auth.uid == resource.data.judgeId;
    }
    
    // Public data for SEO and live viewing
    match /public/{document=**} {
      allow read: if true;
      allow write: if isOrganizer();
    }
    
    // System configuration (admin only)
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}